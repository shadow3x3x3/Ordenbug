<h1 class="text-center">模擬參數設定</h1>
<div class="col-md-6 col-md-offset-3">

  <form action="SkylinePathResult" class="form" method="post" role="form">
    <div class="form-group col-md-4 row col-md-offset-2">
      <h3>選擇要用的資料集</h3>
      <ul class="unstyled">
        <% DataChoices.each do |id, text| %>
        <label class="radio">
          <input type="radio" name="data" value="<%= id %>" id="data_<%= id %>" <%= id == "350" ? 'checked="checked"' : nil%>/>
          <%= text %>
        </label>
        <% end %>
      </ul>
      <h3>設定起訖點與倍數</h3>
      <div class="form-group">
        <label for="source">起點</label>
        <input type="text" class="form-control" id="source" name="source" min="0">
      </div>
      <div class="form-group">
        <label for="destination">終點</label>
        <input type="text" class="form-control" id="destination" name="destination" min="0">
      </div>
      <div class="form-group">
        <label for="destination">限制倍數</label>
        <input type="text" class="form-control" id="constrained" name="constrained" min="0" value="1.3">
      </div>

      <button type="submit" id="start" class="btn btn-primary" onclick='showloading()'>開始計算</button>

    </div>

    <div class="form-group col-md-4 row col-md-offset-1">
      <h3>設定維度倍數</h3>
      <% dim_num = 0 %>
      <div class="form-group">
        <label for="destination">維度一 距離倍數</label>
        <input type="number" class="form-control" id="dim_<%= dim_num +=1 %>" name="dim_<%= dim_num %>" min="1" value=1>
      </div>
      <div class="form-group">
        <label for="destination">維度二 人口密度</label>
        <input type="number" class="form-control" id="dim_<%= dim_num +=1 %>" name="dim_<%= dim_num %>" min="1" value=1>
      </div>
      <div class="form-group">
        <label for="destination">維度三 限制倍數</label>
        <input type="number" class="form-control" id="dim_<%= dim_num +=1 %>" name="dim_<%= dim_num %>" min="1" value=1>
      </div>
      <div class="form-group">
        <label for="destination">維度四 易損機率</label>
        <input type="number" class="form-control" id="dim_<%= dim_num +=1 %>" name="dim_<%= dim_num %>" min="1" value=1>
      </div>
      <div class="form-group">
        <label for="destination">維度五 易損機率(max)</label>
        <input type="number" class="form-control" id="dim_<%= dim_num +=1 %>" name="dim_<%= dim_num %>" min="1" value=1>
      </div>
      <div class="form-group">
        <label for="destination">維度六 淹水深度</label>
        <input type="number" class="form-control" id="dim_<%= dim_num +=1 %>" name="dim_<%= dim_num %>" min="1" value=1>
      </div>
      <div class="form-group">
        <label for="destination">維度七 淹水深度(max)</label>
        <input type="number" class="form-control" id="dim_<%= dim_num +=1 %>" name="dim_<%= dim_num %>" min="1" value=1>
      </div>
    </div>
  </form>
</div>

